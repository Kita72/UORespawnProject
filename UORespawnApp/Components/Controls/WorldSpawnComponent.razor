@using Microsoft.JSInterop
@inject IJSRuntime JS

<div class="container-fluid p-3">
    <!-- Description Block -->
    <div class="alert alert-info mb-3 shadow-sm">
        <div class="d-flex flex-column align-items-center text-center">
            <div class="d-flex align-items-center mb-2">
                <span class="bi bi-grid-3x3-gap me-2" style="font-size: 1.5rem;"></span>
                <strong style="font-size: 1.1rem;">World Spawn System</strong>
            </div>
            <p class="mb-0 small">
                Spawns animals and creatures based on terrain tile types. Configure spawns for grass, forest, water, and more. Each supports common, uncommon, and rare spawn frequencies.
            </p>
        </div>
    </div>

<div class="row">
        <!-- Tile Selection -->
        <div class="col-lg-3">
            <div class="card map-card mb-3">
                <div class="card-header text-center">
                    <strong>World Tile Types</strong>
                </div>
                <div class="card-body p-2">
                    <div class="tile-list">
                        @foreach (WorldTile tile in Enum.GetValues(typeof(WorldTile)))
                        {
                            var tileName = GetTileDisplayName(tile);
                            <div class="tile-item @(selectedTile == tile ? "selected" : "")" 
                                 @onclick="() => SelectTile(tile)">
                                <span class="tile-name">@tileName</span>
                                @if (GetTileSpawnCount(tile) > 0)
                                {
                                    <span class="badge bg-primary ms-auto">@GetTileSpawnCount(tile)</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Spawn Configuration -->
        <div class="col-lg-9">
            @if (selectedTile != null)
            {
                <div class="card map-card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <strong>
                            @GetTileDisplayName(selectedTile.Value) Spawns
                        </strong>
                        <span class="text-muted">Total: @GetTileSpawnCount(selectedTile.Value)</span>
                    </div>
                    <div class="card-body">
                        <!-- Animals Section -->
                        <div class="spawn-section mb-4">
                            <h5 class="section-title">
                                <span class="bi bi-heart-fill text-info"></span> Animals
                            </h5>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-success">
                                            <span class="bi bi-check-circle"></span> Common
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForTile(selectedTile.Value, Frequency.Common, false))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn.Name
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-success w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.Common, false)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-warning">
                                            <span class="bi bi-exclamation-circle"></span> Uncommon
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForTile(selectedTile.Value, Frequency.UnCommon, false))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn.Name
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-warning w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.UnCommon, false)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-danger">
                                            <span class="bi bi-star-fill"></span> Rare
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForTile(selectedTile.Value, Frequency.Rare, false))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn.Name
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-danger w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.Rare, false)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Creatures Section -->
                        <div class="spawn-section">
                            <h5 class="section-title">
                                <span class="bi bi-bug-fill text-danger"></span> Creatures
                            </h5>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-success">
                                            <span class="bi bi-check-circle"></span> Common
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForTile(selectedTile.Value, Frequency.Common, true))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn.Name
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-success w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.Common, true)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-warning">
                                            <span class="bi bi-exclamation-circle"></span> Uncommon
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForTile(selectedTile.Value, Frequency.UnCommon, true))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn.Name
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-warning w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.UnCommon, true)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-danger">
                                            <span class="bi bi-star-fill"></span> Rare
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForTile(selectedTile.Value, Frequency.Rare, true))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn.Name
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-danger w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.Rare, true)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card map-card">
                    <div class="card-body text-center py-5">
                        <span class="bi bi-grid-3x3-gap" style="font-size: 3rem; opacity: 0.3;"></span>
                        <p class="text-muted mt-3">Select a tile type from the list to configure spawns</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Spawn Category Modal -->
<SpawnCategoryModal IsVisible="@showModal"
                    CategoryName="@currentFrequency.ToString()"
                    SpawnTypeName="@(currentIsMob ? "Creatures" : "Animals")"
                    SourceListName="Bestiary"
                    CurrentSpawns="@tempSpawnList"
                    SourceList="@(WorldSpawnUtility.SpawnList ?? new List<string>())"
                    OnClose="@CloseModal"
                    OnSave="@SaveModal" />

@code {
    private WorldTile? selectedTile = null;
    private bool showModal = false;
    private Frequency currentFrequency = Frequency.Common;
    private bool currentIsMob = false;
    private List<string> tempSpawnList = new();

    protected override void OnInitialized()
    {
        // Load existing spawn data (this will initialize entities if needed)
        WorldSpawnUtility.LoadWorldSpawnList();
        
        Console.WriteLine($"WorldSpawnComponent initialized - {WorldSpawnUtility.WorldSpawnList?.Count ?? 0} maps loaded");
    }

    private void SelectTile(WorldTile tile)
    {
        selectedTile = tile;
        StateHasChanged();
    }

    private string GetTileDisplayName(WorldTile tile)
    {
        return tile.ToString().Replace('_', ' ').ToTitleCase();
    }

    private int GetTileSpawnCount(WorldTile tile)
    {
        var entity = WorldSpawnUtility.WorldSpawnList?.FirstOrDefault();
        if (entity != null && entity.WorldSpawn.TryGetValue(tile, out var spawns))
        {
            // Only count spawns with non-empty names
            return spawns.Count(s => !string.IsNullOrWhiteSpace(s.Name));
        }
        return 0;
    }

    private List<TileEntity> GetSpawnsForTile(WorldTile tile, Frequency freq, bool isMob)
    {
        var entity = WorldSpawnUtility.WorldSpawnList?.FirstOrDefault();
        if (entity != null && entity.WorldSpawn.TryGetValue(tile, out var spawns))
        {
            // Filter out any spawns with empty or whitespace names
            return spawns
                .Where(s => s.Freq == freq && s.IsMob == isMob && !string.IsNullOrWhiteSpace(s.Name))
                .ToList();
        }
        return new List<TileEntity>();
    }

    private void OpenModal(Frequency freq, bool isMob)
    {
        if (selectedTile == null) return;

        currentFrequency = freq;
        currentIsMob = isMob;
        
        // IMPORTANT: Create NEW list to avoid reference issues (ghost spawns)
        var currentSpawns = GetSpawnsForTile(selectedTile.Value, freq, isMob)
            .Select(s => s.Name)
            .ToList();
        tempSpawnList = new List<string>(currentSpawns);
        
        showModal = true;
        StateHasChanged();
    }

    private void CloseModal()
    {
        showModal = false;
        tempSpawnList.Clear();
        StateHasChanged();
    }

    private void SaveModal()
    {
        if (selectedTile == null) return;

        var entity = WorldSpawnUtility.WorldSpawnList?.FirstOrDefault();
        if (entity == null) return;

        // Remove ALL old spawns of this category (including ones with empty names)
        if (entity.WorldSpawn.TryGetValue(selectedTile.Value, out var existingSpawns))
        {
            var toRemove = existingSpawns
                .Where(s => s.Freq == currentFrequency && s.IsMob == currentIsMob)
                .ToList();
                
            foreach (var spawn in toRemove)
            {
                entity.RemoveSpawn(selectedTile.Value, spawn);
            }
        }

        // Add new spawns from modal - ONLY add non-empty names
        foreach (var name in tempSpawnList)
        {
            if (!string.IsNullOrWhiteSpace(name))
            {
                var tileEntity = new TileEntity(currentFrequency, name, currentIsMob);
                entity.AddSpawn(selectedTile.Value, tileEntity);
            }
            else
            {
                Console.WriteLine($"WARNING: Skipped empty creature name in {currentFrequency} {(currentIsMob ? "creatures" : "animals")}");
            }
        }

        // Auto-save
        WorldSpawnUtility.SaveWorldSpawnList();
        Console.WriteLine($"Saved {tempSpawnList.Count} {currentFrequency} {(currentIsMob ? "creatures" : "animals")} for {selectedTile}");
        
        StateHasChanged();
    }
}

