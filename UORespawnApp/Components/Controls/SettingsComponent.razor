    private async Task ExecuteCompleteReset()
    {
        try
        {
            Logger.Info("Starting complete tool reset...");

            // 1. Delete local UOR_DATA folder contents
            var localDataPath = PathConstants.LocalDataPath;
            if (Directory.Exists(localDataPath))
            {
                var files = Directory.GetFiles(localDataPath, "UOR_*.bin");
                foreach (var file in files)
                {
                    try
                    {
                        File.Delete(file);
                        Logger.Info($"Deleted: {Path.GetFileName(file)}");
                    }
                    catch (Exception ex)
                    {
                        Logger.Warning($"Could not delete {file}: {ex.Message}");
                    }
                }
            }

            // 2. Clean server if requested and linked
            if (cleanServerOnReset && ServerSetupUtility.IsServerConfigured(Settings.ServUODataFolder))
            {
                Logger.Info("Cleaning linked ServUO folder...");

                // Delete UORespawnSystem scripts folder
                var scriptsPath = Path.Combine(Settings.ServUODataFolder, "Scripts", "Custom", "UORespawnSystem");
                if (Directory.Exists(scriptsPath))
                {
                    try
                    {
                        Directory.Delete(scriptsPath, true);
                        Logger.Info($"Deleted server scripts folder: {scriptsPath}");
                    }
                    catch (Exception ex)
                    {
                        Logger.Warning($"Could not delete scripts folder: {ex.Message}");
                    }
                }

                // Delete UOR_DATA folder on server
                var serverDataPath = Path.Combine(Settings.ServUODataFolder, "Data", "UOR_DATA");
                if (Directory.Exists(serverDataPath))
                {
                    try
                    {
                        Directory.Delete(serverDataPath, true);
                        Logger.Info($"Deleted server data folder: {serverDataPath}");
                    }
                    catch (Exception ex)
                    {
                        Logger.Warning($"Could not delete server data folder: {ex.Message}");
                    }
                }

                // Clear the server link
                Settings.ServUODataFolder = "";
            }

            // 3. Clear in-memory spawn data
            Utility.BoxSpawns.Clear();
            Utility.TileSpawns.Clear();
            Utility.RegionSpawns.Clear();
            Utility.InitializeSpawnDictionary();

            // 4. Reset settings to defaults
            ResetToDefaults();

            // 5. Reload bestiary from default file
            BestiaryListUtility.ClearBestiaryList();
            await BestiaryListUtility.LoadBestiaryList();

            Logger.Info("Complete tool reset finished successfully");
            HideCompleteResetModal();
            ToastService.ShowSuccess("Complete reset finished! Tool is now in fresh install state.");
        }
        catch (Exception ex)
        {
            Logger.Error("Error during complete reset", ex);
            ToastService.ShowError($"Reset error: {ex.Message}");
            HideCompleteResetModal();
        }
    }
