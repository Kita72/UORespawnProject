@using Microsoft.JSInterop
@inject IJSRuntime JS

<div class="container-fluid p-3">
    <!-- Description Block -->
    <div class="alert alert-info mb-3 shadow-sm">
        <div class="d-flex flex-column align-items-center text-center">
            <div class="d-flex align-items-center mb-2">
                <span class="bi bi-geo-alt-fill me-2" style="font-size: 1.5rem;"></span>
                <strong style="font-size: 1.1rem;">Static Spawn System</strong>
            </div>
            <p class="mb-0 small">
                Spawns creatures near static world objects like trees, rocks, or buildings. Configure spawns for each static item type with common, uncommon, and rare frequencies.
            </p>
        </div>
    </div>

<div class="row">
        <!-- Static Item Selection -->
        <div class="col-lg-3">
            <div class="card map-card mb-3">
                <div class="card-header text-center">
                    <strong>Static Items (@GetStaticListCount())</strong>
                </div>
                <div class="card-body p-2">
                    <div class="input-group mb-2">
                        <input type="text" 
                               class="form-control form-control-sm" 
                               placeholder="Search statics..." 
                               @bind="searchQuery"
                               @bind:event="oninput" />
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ClearSearch">
                            <span class="bi bi-x-lg"></span>
                        </button>
                    </div>
                    
                    <!-- Static List from UOR_StaticList.txt -->
                    <div class="tile-list">
                        @if (GetFilteredAvailableStatics().Any())
                        {
                            @foreach (var staticName in GetFilteredAvailableStatics())
                            {
                                var entity = GetOrCreateStaticEntity(staticName);
                                <div class="tile-item @(selectedStatic?.Name == staticName ? "selected" : "")" 
                                     @onclick="() => SelectStatic(entity)">
                                    <span class="tile-name">@staticName</span>
                                    @if (entity.Spawn.Count > 0)
                                    {
                                        <span class="badge bg-primary ms-auto">@entity.Spawn.Count</span>
                                    }
                                </div>
                            }
                        }
                        else if (!string.IsNullOrEmpty(searchQuery))
                        {
                            <div class="alert alert-info mb-0">
                                No statics match "@searchQuery"
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-secondary mb-0">
                                Loading statics...
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Spawn Configuration -->
        <div class="col-lg-9">
            @if (selectedStatic != null)
            {
                <div class="card map-card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <strong>
                            @selectedStatic.Name Spawns
                        </strong>
                        <span class="text-muted">Total: @selectedStatic.Spawn.Count creatures</span>
                    </div>
                    <div class="card-body">
                        <!-- Creatures Section (No Animals for Static) -->
                        <div class="spawn-section">
                            <h5 class="section-title">
                                <span class="bi bi-bug-fill text-danger"></span> Creature Spawns
                            </h5>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-success">
                                            <span class="bi bi-check-circle"></span> Common
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForStatic(Frequency.Common))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-success w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.Common)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-warning">
                                            <span class="bi bi-exclamation-circle"></span> Uncommon
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForStatic(Frequency.UnCommon))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-warning w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.UnCommon)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-danger">
                                            <span class="bi bi-star-fill"></span> Rare
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForStatic(Frequency.Rare))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-danger w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.Rare)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card map-card">
                    <div class="card-body text-center py-5">
                        <span class="bi bi-box-seam" style="font-size: 3rem; opacity: 0.3;"></span>
                        <p class="text-muted mt-3">Select a static item from the list or add a new one to configure spawns</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Spawn Category Modal -->
<SpawnCategoryModal IsVisible="@showModal"
                    CategoryName="@currentFrequency.ToString()"
                    SpawnTypeName="Creatures"
                    SourceListName="Bestiary"
                    CurrentSpawns="@tempSpawnList"
                    SourceList="@(WorldSpawnUtility.SpawnList ?? new List<string>())"
                    OnClose="@CloseModal"
                    OnSave="@SaveModal" />

@code {
private StaticEntity? selectedStatic = null;
private bool showModal = false;
private Frequency currentFrequency = Frequency.Common;
private List<string> tempSpawnList = new();
private string searchQuery = "";
private List<string> availableStatics = new();

protected override async Task OnInitializedAsync()
{
    // Load static list using the utility (supports custom lists and embedded fallback)
    await WorldSpawnUtility.LoadStaticList();
    availableStatics = WorldSpawnUtility.StaticList ?? new List<string>();
        
    // Load existing static spawn data
    WorldSpawnUtility.LoadStaticSpawnList();
        
    Console.WriteLine($"StaticSpawnComponent initialized - {availableStatics.Count} static types, {WorldSpawnUtility.StaticSpawnList?.Count ?? 0} configured");
    
    // Force UI refresh after data is loaded
    StateHasChanged();
}

private int GetStaticListCount()
{
    return availableStatics.Count;
}

private List<string> GetFilteredAvailableStatics()
{
    if (availableStatics == null || availableStatics.Count == 0)
    {
        return new List<string>();
    }
        
    if (string.IsNullOrEmpty(searchQuery))
    {
        return availableStatics;
    }
        
    return availableStatics
        .Where(s => s.Contains(searchQuery, StringComparison.OrdinalIgnoreCase))
        .ToList();
}

private StaticEntity GetOrCreateStaticEntity(string name)
{
    var existing = WorldSpawnUtility.StaticSpawnList?.FirstOrDefault(s => s.Name == name);
    if (existing != null)
    {
        return existing;
    }
        
    // Create new entity but don't add to list yet (only when spawns are added)
    return new StaticEntity(name, new List<(Frequency freq, string name)>());
}

    private void SelectStatic(StaticEntity staticEntity)
    {
        selectedStatic = staticEntity;
        StateHasChanged();
    }

    private void ClearSearch()
    {
        searchQuery = "";
        StateHasChanged();
    }

    private List<string> GetSpawnsForStatic(Frequency freq)
    {
        if (selectedStatic == null) return new List<string>();
        
        return selectedStatic.Spawn
            .Where(s => s.freq == freq)
            .Select(s => s.name)
            .ToList();
    }

    private void OpenModal(Frequency freq)
    {
        if (selectedStatic == null) return;

        currentFrequency = freq;
        
        // IMPORTANT: Create NEW list to avoid reference issues
        tempSpawnList = new List<string>(GetSpawnsForStatic(freq));
        
        showModal = true;
        StateHasChanged();
    }

    private void CloseModal()
    {
        showModal = false;
        tempSpawnList.Clear();
        StateHasChanged();
    }

    private void SaveModal()
    {
        if (selectedStatic == null) return;

        // Check if entity exists in list
        var existing = WorldSpawnUtility.StaticSpawnList?.FirstOrDefault(s => s.Name == selectedStatic.Name);
        if (existing == null && tempSpawnList.Count > 0)
        {
            // Add new entity to list if it has spawns
            WorldSpawnUtility.StaticSpawnList?.Add(selectedStatic);
        }

        // Remove old spawns of this frequency
        var toRemove = selectedStatic.Spawn
            .Where(s => s.freq == currentFrequency)
            .ToList();
            
        foreach (var spawn in toRemove)
        {
            selectedStatic.RemoveSpawn(spawn);
        }

        // Add new spawns from modal - ONLY add non-empty names
        foreach (var name in tempSpawnList)
        {
            if (!string.IsNullOrWhiteSpace(name))
            {
                selectedStatic.AddSpawn((currentFrequency, name));
            }
            else
            {
                Console.WriteLine($"WARNING: Skipped empty creature name in {currentFrequency} for {selectedStatic.Name}");
            }
        }

        // Remove entity if it has no spawns
        if (selectedStatic.Spawn.Count == 0 && existing != null)
        {
            WorldSpawnUtility.StaticSpawnList?.Remove(selectedStatic);
        }

        // Auto-save
        WorldSpawnUtility.SaveStaticSpawnList();
        Console.WriteLine($"Saved {tempSpawnList.Count} {currentFrequency} creatures for {selectedStatic.Name}");
        
        StateHasChanged();
    }
}

