@using Microsoft.JSInterop
@inject IJSRuntime JS

<div class="container-fluid p-3">
    <!-- Description Block -->
    <div class="alert alert-info mb-3 shadow-sm">
        <div class="d-flex flex-column align-items-center text-center">
            <div class="d-flex align-items-center mb-2">
                <span class="bi bi-cloud-sun-fill me-2" style="font-size: 1.5rem;"></span>
                <strong style="font-size: 1.1rem;">Weather Spawn System</strong>
            </div>
            <p class="mb-0 small">
                Spawns animals and creatures when specific weather conditions occur. Configure rain and snow event spawns with common, uncommon, and rare frequencies.
            </p>
        </div>
    </div>

<div class="row">
        <!-- Weather Type Selection -->
        <div class="col-lg-3">
            <div class="card map-card mb-3">
                <div class="card-header text-center">
                    <strong>Weather Types</strong>
                </div>
                <div class="card-body p-2">
                    <div class="tile-list">
                        @foreach (var weather in GetWeatherTypes())
                        {
                            <div class="tile-item @(selectedWeather == weather ? "selected" : "")" 
                                 @onclick="() => SelectWeather(weather)">
                                <span class="tile-name">@GetWeatherDisplayName(weather)</span>
                                @if (GetWeatherSpawnCount(weather) > 0)
                                {
                                    <span class="badge bg-primary ms-auto">@GetWeatherSpawnCount(weather)</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Spawn Configuration -->
        <div class="col-lg-9">
            @if (selectedWeather != null)
            {
                <div class="card map-card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <strong>
                            @GetWeatherDisplayName(selectedWeather.Value) Spawns
                        </strong>
                        <span class="text-muted">Total: @GetWeatherSpawnCount(selectedWeather.Value)</span>
                    </div>
                    <div class="card-body">
                        <!-- Animals Section -->
                        <div class="spawn-section mb-4">
                            <h5 class="section-title">
                                <span class="bi bi-heart-fill text-info"></span> Animals
                            </h5>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-success">
                                            <span class="bi bi-check-circle"></span> Common
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForWeather(selectedWeather.Value, Frequency.Common, false))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn.Name
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-success w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.Common, false)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-warning">
                                            <span class="bi bi-exclamation-circle"></span> Uncommon
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForWeather(selectedWeather.Value, Frequency.UnCommon, false))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn.Name
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-warning w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.UnCommon, false)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-danger">
                                            <span class="bi bi-star-fill"></span> Rare
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForWeather(selectedWeather.Value, Frequency.Rare, false))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn.Name
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-danger w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.Rare, false)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Creatures Section -->
                        <div class="spawn-section">
                            <h5 class="section-title">
                                <span class="bi bi-bug-fill text-danger"></span> Creatures
                            </h5>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-success">
                                            <span class="bi bi-check-circle"></span> Common
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForWeather(selectedWeather.Value, Frequency.Common, true))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn.Name
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-success w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.Common, true)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-warning">
                                            <span class="bi bi-exclamation-circle"></span> Uncommon
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForWeather(selectedWeather.Value, Frequency.UnCommon, true))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn.Name
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-warning w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.UnCommon, true)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="category-card">
                                        <div class="category-header bg-danger">
                                            <span class="bi bi-star-fill"></span> Rare
                                        </div>
                                        <div class="category-body">
                                            @foreach (var spawn in GetSpawnsForWeather(selectedWeather.Value, Frequency.Rare, true))
                                            {
                                                <div class="spawn-badge">
                                                    @spawn.Name
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-danger w-100 mt-2" 
                                                    @onclick="() => OpenModal(Frequency.Rare, true)">
                                                <span class="bi bi-pencil"></span> Edit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card map-card">
                    <div class="card-body text-center py-5">
                        <span class="bi bi-cloud-rain" style="font-size: 3rem; opacity: 0.3;"></span>
                        <p class="text-muted mt-3">Select a weather type from the list to configure spawns</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Spawn Category Modal -->
<SpawnCategoryModal IsVisible="@showModal"
                    CategoryName="@currentFrequency.ToString()"
                    SpawnTypeName="@(currentIsMob ? "Creatures" : "Animals")"
                    SourceListName="Bestiary"
                    CurrentSpawns="@tempSpawnList"
                    SourceList="@(WorldSpawnUtility.SpawnList ?? new List<string>())"
                    OnClose="@CloseModal"
                    OnSave="@SaveModal" />

@code {
    private WorldTile? selectedWeather = null;
    private bool showModal = false;
    private Frequency currentFrequency = Frequency.Common;
    private bool currentIsMob = false;
    private List<string> tempSpawnList = new();

    // Predefined weather types (expandable in future)
    private static readonly WorldTile[] WeatherTypes = new[]
    {
        WorldTile.rain_event,
        WorldTile.snow_event
    };

    protected override async Task OnInitializedAsync()
    {
        // Load existing spawn data (reuses WorldEntity system)
        await WorldSpawnUtility.LoadWorldSpawnList();
        
        Logger.Info($"WeatherComponent initialized - {WeatherTypes.Length} weather types available");
    }

    private List<WorldTile> GetWeatherTypes()
    {
        return WeatherTypes.ToList();
    }

    private void SelectWeather(WorldTile weather)
    {
        selectedWeather = weather;
        StateHasChanged();
    }

    private string GetWeatherDisplayName(WorldTile weather)
    {
        return weather.ToString().Replace('_', ' ').ToTitleCase();
    }

    private int GetWeatherSpawnCount(WorldTile weather)
    {
        var entity = WorldSpawnUtility.WorldSpawnList?.FirstOrDefault();
        if (entity != null && entity.WorldSpawn.TryGetValue(weather, out var spawns))
        {
            return spawns.Count;
        }
        return 0;
    }

    private List<TileEntity> GetSpawnsForWeather(WorldTile weather, Frequency freq, bool isMob)
    {
        var entity = WorldSpawnUtility.WorldSpawnList?.FirstOrDefault();
        if (entity != null && entity.WorldSpawn.TryGetValue(weather, out var spawns))
        {
            return spawns.Where(s => s.Freq == freq && s.IsMob == isMob).ToList();
        }
        return new List<TileEntity>();
    }

    private void OpenModal(Frequency freq, bool isMob)
    {
        if (selectedWeather == null) return;

        currentFrequency = freq;
        currentIsMob = isMob;
        
        // IMPORTANT: Create NEW list to avoid reference issues (ghost spawns)
        var currentSpawns = GetSpawnsForWeather(selectedWeather.Value, freq, isMob)
            .Select(s => s.Name)
            .ToList();
        tempSpawnList = new List<string>(currentSpawns);
        
        showModal = true;
        StateHasChanged();
    }

    private void CloseModal()
    {
        showModal = false;
        tempSpawnList.Clear();
        StateHasChanged();
    }

    private async Task SaveModal()
    {
        if (selectedWeather == null) return;

        var entity = WorldSpawnUtility.WorldSpawnList?.FirstOrDefault();
        if (entity == null) return;

        // Remove old spawns of this category
        var toRemove = GetSpawnsForWeather(selectedWeather.Value, currentFrequency, currentIsMob);
        foreach (var spawn in toRemove)
        {
            entity.RemoveSpawn(selectedWeather.Value, spawn);
        }

        // Add new spawns from modal
        foreach (var name in tempSpawnList)
        {
            var tileEntity = new TileEntity(currentFrequency, name, currentIsMob);
            entity.AddSpawn(selectedWeather.Value, tileEntity);
        }

        // Auto-save
        await WorldSpawnUtility.SaveWorldSpawnList();
        Logger.Info($"Saved {tempSpawnList.Count} {currentFrequency} {(currentIsMob ? "creatures" : "animals")} for {selectedWeather}");
        
        StateHasChanged();
    }
}
