@using Microsoft.AspNetCore.Components.Forms

<div class="card mt-3">
    <div class="card-header">Spawn Info</div>
    <div class="card-body">
        <p>Priority: @Spawn.Priority</p>
        <p>Location: X:@Spawn.SpawnBox.X Y:@Spawn.SpawnBox.Y W:@Spawn.SpawnBox.Width H:@Spawn.SpawnBox.Height</p>
        <EditForm Model="Spawn" OnValidSubmit="HandleSave">
            <div class="mb-3">
                <label>Timed Spawn</label>
                <InputSelect @bind-Value="Spawn.TimedSpawn" class="form-select">
                    <option value="">None</option>
                    <option value="Day">Day</option>
                    <option value="Night">Night</option>
                </InputSelect>
            </div>
            <div class="mb-3">
                <label>Common Spawns</label>
                <InputText @bind-Value="newCommon" class="form-control" />
                <button type="button" class="btn btn-sm btn-success" @onclick="AddCommon">Add</button>
                <ul class="list-group">
                    @foreach (var s in Spawn.CommonSpawnList)
                    {
                        <li class="list-group-item">@s <button class="btn btn-sm btn-danger" @onclick="() => RemoveCommon(s)">Remove</button></li>
                    }
                </ul>
            </div>
            <!-- Similar for UnCommon and Rare -->
            <button type="submit" class="btn btn-primary">Save</button>
        </EditForm>
    </div>
</div>

@code {
    [Parameter] public SpawnEntity Spawn { get; set; } = new();
    [Parameter] public EventCallback<SpawnEntity> OnSave { get; set; }

    private string newCommon = "";

    private void AddCommon()
    {
        if (!string.IsNullOrEmpty(newCommon))
        {
            Spawn.CommonSpawnList.Add(newCommon);
            newCommon = "";
        }
    }

    private void RemoveCommon(string item)
    {
        Spawn.CommonSpawnList.Remove(item);
    }

    private async Task HandleSave()
    {
        await OnSave.InvokeAsync(Spawn);
    }
}